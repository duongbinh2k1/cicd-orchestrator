# ================================
# CI/CD Orchestrator Configuration
# ================================

# Application Settings
SECRET_KEY=change-this-secret-key-in-production
ENVIRONMENT=development
DEBUG=false
HOST=0.0.0.0
PORT=8000

# Security
CORS_ORIGINS=*
ALLOWED_HOSTS=*

# GitLab Integration
GITLAB_API_TOKEN=your-gitlab-token-here
GITLAB_BASE_URL=https://gitlab.com
GITLAB_WEBHOOK_SECRET=your-webhook-secret

# GitLab Data Fetching
GITLAB_AUTO_FETCH_LOGS=true
GITLAB_FETCH_FULL_PIPELINE=true
GITLAB_FETCH_TEST_REPORTS=true
GITLAB_MAX_LOG_SIZE_MB=10
GITLAB_LOG_CONTEXT_LINES=50
GITLAB_TIMEOUT=30

# AI Providers
# OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_BASE_URL=
OPENAI_ORGANIZATION=
OPENAI_PROJECT=

# Anthropic
ANTHROPIC_API_KEY=your-anthropic-api-key

# Azure OpenAI
AZURE_OPENAI_API_KEY=your-azure-openai-api-key
AZURE_OPENAI_ENDPOINT=your-azure-openai-endpoint
AZURE_OPENAI_API_VERSION=2024-02-01

# AI Configuration
DEFAULT_AI_PROVIDER=openai
AI_ANALYSIS_TIMEOUT=120
AI_MAX_TOKENS=2000
AI_TEMPERATURE=0.3

# Database
# For production: PostgreSQL
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/cicd_orchestrator
# For development: SQLite (default)
DATABASE_URL=sqlite+aiosqlite:///./cicd_orchestrator.db
DATABASE_ECHO=false

# Processing
MAX_CONCURRENT_ANALYSIS=3
ANALYSIS_TIMEOUT=300

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=console
LOG_FILE=

# Monitoring
SENTRY_DSN=your-sentry-dsn
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1
